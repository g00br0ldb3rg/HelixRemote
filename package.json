{
	"name":    "helix-remote",
	"version": "0.0.0",
	"type":    "module",
	"license": "gpl-3.0",

	"scripts": {
		"dev":   "vite          --config ./__Configuration__/Vite/index.ts",
		"build": "vite build    --config ./__Configuration__/Vite/index.ts",
		"start": "vite preview  --config ./__Configuration__/Vite/index.ts",

		"repl":       "cls &&                                                             node  --loader ts-node/esm  --require tsconfig-paths/register  ./src/__REPL__.ts",
		"repl-watch": "nodemon  --config ./__Configuration__/NodeMon/Config.json  --exec  node  --loader ts-node/esm  --require tsconfig-paths/register  ./src/__REPL__.ts"
	},

	"dependencies": {
		"lodash-es":                        "4.17.21",
		"@types/lodash-es":                 "4.17.6",

		"solid-js":                         "1.6.11",
		"solid-use":                        "0.6.2",
		"solid-styled-components":          "0.28.5",
		"@solid-primitives/event-listener": "2.2.7",
		"@solid-primitives/scheduled":      "1.3.1",
		"@solid-primitives/timer":          "1.3.6",

		"@hope-ui/solid":                   "0.6.7",
		"@stitches/core":                   "1.2.8",
		"solid-transition-group":           "0.0.13",

		"@fontsource/exo-2":                "4.5.11",

		"xstate":                           "4.37.0",
		"@xstate/graph":                    "1.4.2",
		"@xstate/inspect":                  "0.7.1",
		"@xstate/solid":                    "0.1.3",

		"tone":                             "14.7.77",
		"startaudiocontext":                "1.2.1"
	},

	"devDependencies": {
		"@types/node":         "18.14.2",
		"@types/webmidi":      "2.0.7",

		"nodemon":             "2.0.20",

		"typescript":          "4.9.5",
		"tsconfig-paths":      "3.14.2",
		"ts-node":             "10.9.1",
		"ts-toolbelt":         "9.6.0",

		"vite":                "4.1.4",
		"vite-plugin-solid":   "2.5.0",
		"vite-tsconfig-paths": "4.0.5",

		"sass":                "1.58.3",

		"unplugin-icons":      "0.15.3",
		"@iconify/json":       "2.2.28"
	}

}
